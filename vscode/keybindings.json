// 将键绑定放在此文件中以覆盖默认值auto[]
[
    // 自动聚焦explore
    {
        "key": "ctrl+b",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "editorTextFocus && isWindows"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.terminal.killAll",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+\\",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    // 在Hover时使用hjkl滚动
    {
        "key": "h",
        "command": "editor.action.scrollLeftHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "l",
        "command": "editor.action.scrollRightHover",
        "when": "editorHoverFocused"
    },
    // use tab to select next suggestion
    {
        "key": "tab",
        "command": "selectNextSuggestion",
        "when": "textInputFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "enter",
        "command": "acceptSelectedSuggestion",
        "when": "textInputFocus && suggestWidgetVisible && suggestWidgetMultipleSuggestions"
    },
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "tab",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "shift+tab",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },
    //navigation 
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "listFocus && !inputFocus"
    },
    //startRegion
    {
        "command": "-vscode-neovim.send",
        "key": "ctrl+z",
    },
    {
        "command": "-vscode-neovim.send",
        "key": "ctrl+r",
    },
    {
        "command": "-vscode-neovim.send",
        "key": "ctrl+k"
    },
    {
        "command": "-vscode-neovim.send",
        "key": "ctrl+w"
    },
    {
        "command": "-vscode-neovim.send",
        "key": "ctrl+c"
    },
    {
        "command": "vscode-neovim.compositeEscape1",
        "key": "j",
        "when": "neovim.mode == insert && editorTextFocus",
        "args": "j"
    },
    {
        "key": "ctrl+c",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.init",
        "args": "<C-c>"
    },
    {
        "key": "alt+j",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.init",
        "args": "<A-j>"
    },
    {
        "key": "alt+k",
        "command": "vscode-neovim.send",
        "when": "editorTextFocus && neovim.init",
        "args": "<A-k>"
    },
    //endRegion
    {
        "key": "ctrl+/",
        "command": "editor.action.commentLine",
        "when": "isWindows && editorTextFocus && !editorReadonly && neovim.mode == 'normal'"
    },
    {
        "key": "cmd+/",
        "command": "editor.action.commentLine",
        "when": "isMac && editorTextFocus && !editorReadonly && neovim.mode == 'normal'"
    },
    {
        "key": "ctrl+space",
        "command": "editor.action.triggerSuggest",
        "when": "editorTextFocus && !editorReadonly"
    }
]
